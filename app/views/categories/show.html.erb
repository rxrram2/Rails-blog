<div class="post">
<h1><%= @category.name %></h1>
<p id="notice"><%= notice %></p>
<% if @posts.each do |post| %> 
   <h3><%= link_to post.title,post %><h3>
   <p><%= post.body %></p>
<% end.empty? %>
   <p>Sorry, there are no posts in this category</p>
<% end %>
<%= link_to "Back to Categories", categories_path %>
</div>
